# üîß ReCloop AI Environment Configuration

# ===========================================
# üåê DOMAIN CONFIGURATION
# ===========================================
DOMAIN=recloop.com
FRONTEND_URL=https://recloop.com
WEBHOOK_URL=https://recloop.com/webhook
API_URL=https://recloop.com/api

# ===========================================
# üóÑÔ∏è CONVEX BACKEND CONFIGURATION
# ===========================================
CONVEX_URL=your-convex-deployment-url
CONVEX_DEPLOY_KEY=your-convex-deploy-key

# ===========================================
# üîë GOOGLE WORKSPACE OAUTH & API
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://recloop.com/auth/google/callback
GOOGLE_PROJECT_ID=your-google-project-id

# Gmail API Configuration
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# Google Calendar API Configuration
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar,https://www.googleapis.com/auth/calendar.events

# Google Pub/Sub Configuration
PUBSUB_TOPIC=gmail-notifications
PUBSUB_SUBSCRIPTION=gmail-notifications-sub
PUBSUB_ENDPOINT=https://recloop.com/webhook/gmail

# ===========================================
# ü§ñ OPENAI CONFIGURATION
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# ===========================================
# üìß EMAIL & NOTIFICATIONS
# ===========================================
RESEND_API_KEY=re_your-resend-api-key
EMAIL_DOMAIN=recloop.com
NOTIFICATION_FROM_EMAIL=notifications@recloop.com

# ===========================================
# üîê SECURITY & ENCRYPTION
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key

# ===========================================
# üöÄ SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3001
FRONTEND_PORT=3000

# ===========================================
# üìä LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_SENTRY=false
SENTRY_DSN=your-sentry-dsn

# ===========================================
# üåç TIMEZONE & LOCALIZATION
# ===========================================
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en-US

# ===========================================
# üíæ BACKUP & STORAGE
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# üîÑ DEPLOYMENT CONFIGURATION
# ===========================================
DEPLOY_BRANCH=main
DEPLOY_USER=recloop
DEPLOY_PATH=/var/www/recloop
GIT_REPO_URL=https://github.com/recloopai/recloop-ai-assistant.git

# ===========================================
# üö¶ RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT=50

# ===========================================
# üîß PM2 CONFIGURATION
# ===========================================
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=1G
PM2_LOG_PATH=/var/log/pm2

# ===========================================
# üåê NGINX CONFIGURATION
# ===========================================
NGINX_CONF_PATH=/etc/nginx/sites-available/recloop
SSL_CERT_PATH=/etc/letsencrypt/live/recloop.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/recloop.com/privkey.pem